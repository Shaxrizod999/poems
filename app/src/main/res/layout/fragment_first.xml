<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FirstFragment">

    <TextView

        android:id="@+id/textv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintVertical_bias="0.05"
        android:textSize="28sp"
        android:layout_marginStart="15dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:text="SHE'RIYAT\nOLAMI"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>



    <androidx.cardview.widget.CardView

        android:id="@+id/card1"
        app:layout_constraintTop_toBottomOf="@id/textv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.1"
        android:backgroundTint="#E6C151"
        app:cardCornerRadius="15dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <ImageView

            android:src="@drawable/ic_baseline_layers_24"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"/>


        <TextView

            android:text="Yangilar"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="150"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView


        android:id="@+id/card2"
        app:layout_constraintTop_toBottomOf="@id/textv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/card1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.5"
        android:backgroundTint="#E13F76"
        app:cardCornerRadius="15dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <ImageView

            android:layout_margin="15dp"
            android:src="@drawable/like"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView

            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:text="Saqlanganlar"
            android:textColor="#fff"
            android:layout_marginStart="50dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView


        android:id="@+id/card3"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintBottom_toBottomOf="@id/card1"
        app:layout_constraintLeft_toLeftOf="@id/card1"
        app:layout_constraintRight_toRightOf="@id/card1"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintHorizontal_bias="0.4"
        android:backgroundTint="#000"
        app:cardCornerRadius="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <TextView

            android:layout_gravity="center"
            android:text="New"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView


        android:id="@+id/card4"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintLeft_toLeftOf="@id/card2"
        app:layout_constraintRight_toRightOf="@id/card2"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintHorizontal_bias="0.4"
        android:backgroundTint="#000"
        app:cardCornerRadius="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <TextView

            android:layout_gravity="center"
            android:text="Like"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/sevgisher"
        app:layout_constraintTop_toBottomOf="@id/card3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.17"
        android:backgroundTint="#fff"
        android:elevation="5dp"
        android:orientation="vertical"
        app:cardCornerRadius="12dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <de.hdodenhof.circleimageview.CircleImageView

            android:src="@drawable/sevgi"
            android:layout_width="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"/>

        <TextView

            android:text="Sevgi she'rlar"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:textStyle="italic"
            android:layout_gravity="bottom"
            android:layout_marginStart="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView


        android:id="@+id/sogincharmon"
        app:layout_constraintTop_toBottomOf="@id/card4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/sevgisher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.78"
        android:backgroundTint="#fff"
        android:elevation="5dp"
        app:cardCornerRadius="12dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <de.hdodenhof.circleimageview.CircleImageView

            android:src="@drawable/armon"
            android:layout_width="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"/>

        <TextView

            android:text="Sog'inch, armon"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:textStyle="italic"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView


        android:id="@+id/tortliklar"
        app:layout_constraintTop_toBottomOf="@id/sevgisher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintHorizontal_bias="0.17"
        android:backgroundTint="#fff"
        android:elevation="5dp"
        app:cardCornerRadius="12dp"
        android:layout_width="0dp"
        android:layout_height="0dp">


        <de.hdodenhof.circleimageview.CircleImageView

            android:src="@drawable/tabrik"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp"/>

        <TextView

            android:text="To'rtliklar"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:textStyle="italic"
            android:layout_gravity="bottom"
            android:layout_marginStart="38dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView


        android:id="@+id/otaonahaqida"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#fff"
        android:elevation="5dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintLeft_toLeftOf="@id/sevgisher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sogincharmon"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintWidth_percent="0.35">

        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ota" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:text="Ota - ona haqida"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="italic" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView


        android:id="@+id/dostliksherlari"
        app:layout_constraintTop_toBottomOf="@id/tortliklar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintVertical_bias="0.26"
        app:layout_constraintHorizontal_bias="0.17"
        android:backgroundTint="#fff"
        android:elevation="5dp"
        app:cardCornerRadius="12dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/dost" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="Turli mavzular"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="italic" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView


        android:id="@+id/hazilsher"
        app:layout_constraintTop_toBottomOf="@id/otaonahaqida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/sevgisher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintVertical_bias="0.26"
        app:layout_constraintHorizontal_bias="0.78"
        android:backgroundTint="#fff"
        android:elevation="5dp"
        app:cardCornerRadius="12dp"
        android:layout_width="0dp"
        android:layout_height="0dp">


        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/hazil" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="Hazil she'rlar"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="italic" />

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>